<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.hearc.rollanddice.MainActivity">

    <TextView
        android:text="Nombre de dés à lancer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNbDices"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Type de dé"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewType"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonStats" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewResult"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Lancer"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRoll"
        android:layout_width="180dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/testListView"
        android:layout_below="@+id/textViewNbDices"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_above="@+id/buttonNewDice" />

    <Button
        android:text="Ajouter dé"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNewDice"
        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/buttonRoll"
        android:layout_alignBottom="@+id/buttonRoll"
        android:layout_toStartOf="@+id/buttonRoll"
        android:layout_marginEnd="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textViewResult"
        android:id="@+id/buttonSecret"
        android:background="@android:color/transparent" />

</RelativeLayout>
